<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <!-- The button that starts Activity_add_task -->
    <Button
        android:id="@+id/addBtn"
        android:text="Add New Task"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="screenAdd"/>

    <!-- The button that deletes all tasks -->
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Delete All"
        android:id="@+id/deleteBtn"
        android:layout_gravity="center_horizontal"
        android:onClick="deleteAll"/>

    <!-- The button that starts Activity_about -->
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/aboutBtn"
        android:layout_gravity="center_horizontal"
        android:onClick="screenAbout"/>

    <!-- The button that displays a notification -->
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:id="@+id/notificationBtn"
        android:layout_gravity="center_horizontal"
        android:onClick="notification"/>

    <!-- The ListView that displays all the saved tasks -->
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="false"/>

</LinearLayout>
